#include "../cub3d.h"

int	init_map(char *filename, t_map **map)
{
	int	i;
	int	line_count;
	int	fd;

	i = 0;
	line_count = count_lines(filename);
	if (line_count == -1)
		return (0);
	(*map)->grid = (char **)malloc(sizeof(char *) * (line_count + 1));
	if (!(*map)->grid)
		return (0);
	fd = open(filename, O_RDONLY);
	if (fd == -1)
		return (free_map(map), free((*map)-> grid), 0);
	while (i < line_count)
	{
		(*map)->grid[i] = get_next_line(fd);
		if (!(*map)->grid[i])
			return (free_map(map), free((*map)->grid), 0);
		i++;
	}
	(*map)->grid[i] = NULL;
	close(fd);
	return (1);
}

void	calculate_dimensions(t_map *map)
{
	char	**grid;
	int		i;
	int		j;

	i = 0;
	j = 0;
	grid = map->grid;
	map->width = ft_strlen(map->grid[0]);
	while (grid[i])
	{
		j = 0;
		while (grid[i][j])
		{
			j++;
		}
		i++;
	}
	map->height = i;
}

int	is_rectangle(t_map *map)
{
	int		i;
	char	**grid;

	i = 0;
	grid = map->grid;
	map->width = ft_strlen(map-> grid[i]);
	while (grid[i])
	{
		if (ft_strlen(grid[i]) == ft_strlen(grid[0]))
			i++;
		else
			return (write (2, "Error\nIn grid format\n", 21), 0);
	}
	return (1);
}
